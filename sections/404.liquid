<section class="erro404"></section>

<style>
  section.erro404 {
    padding: 100px 80px 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Tracking de evento 404 (opcional)
    if (typeof gtag !== 'undefined') {
      gtag('event', 'page_view', {
        page_title: '404 - Página não encontrada',
        page_location: window.location.href
      });
    }
  });
</script>

{% schema %}
  {
    "name": "Página 404",
    "settings": [
      {
        "type": "header",
        "content": "Página de Erro 404"
      }, {
        "type": "paragraph",
        "content": "Esta seção exibe uma página de erro 404 com animações suaves e automáticas no número 404."
      }
    ]
  }
{% endschema %}
